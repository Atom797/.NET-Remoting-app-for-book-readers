<configuration>
  <system.runtime.remoting>
    <application name="enter">
      <lifetime leaseTime = "10M" sponsorshipTimeOut = "6M"
            renewOnCallTime = "4M" pollTime = "40s"/>

        <service>
          <wellknown mode="SingleCall"
          type="MyLibrary.EnterR, MyLibrary"
          objectUri="MyLibrary" />
          
          <wellknown mode="SingleCall"
               type="MyLibrary.DiaryWorkPage, MyLibrary"
               objectUri="MyLibrary" />
        </service>


      
      <channels>
        <channel ref="tcp" port="8086"  secure="true"
                   protectionLevel="EncryptAndSign"
                   impersonate= "false"
>
          <serverProviders>
            <formatter ref="binary" typeFilterLevel="Full"/>
          </serverProviders>
          <clientProviders>
            <formatter ref="binary"/>
          </clientProviders>
        </channel>

       
        
        <channel ref="ipc" portName="myIpcPort"  secure="true"
                   protectionLevel="EncryptAndSign"
                   impersonate= "false"
>
          <serverProviders>
            <formatter ref="binary" typeFilterLevel="Full"/>
          </serverProviders>
          <clientProviders>
            <formatter ref="binary" />
          </clientProviders>
        </channel>
      </channels>

    </application>
  </system.runtime.remoting>
</configuration>
